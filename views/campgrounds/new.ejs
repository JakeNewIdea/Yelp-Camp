<% include ../partials/header %>

    <div class="container">
        <div class="row">
            <h1 style="text-align: center">Create New Campground</h1>
            <div style="width: 30%; margin: 30px auto">
                <form action="/campgrounds" method="POST">
                    <div class="form-group">
                        <input type="text" name="campground[name]" class="form-control" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <input type="number" name="campground[price]" class="form-control" placeholder="Price" min='1.00' step='1.00'>
                    </div>
                    <div class="form-group">
                        <input type="text" name="campground[image]" class="form-control" placeholder="Image URL">
                    </div>
                    <div class="form-group">
                        <input type="text" name="campground[description]" class="form-control" placeholder="Description">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Submit</button>
                    </div>
                </form>
                <a href="/campgrounds">Go Back</a>
            </div>
        </div>
    </div>

<% include ../partials/footer %>