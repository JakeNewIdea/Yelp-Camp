<% include ../partials/header %>

    <div class="container">
        <div class="row">
            <h1 style="text-align: center">Edit <span><em><%= campground.name %></em></h1>
            <div style="width: 30%; margin: 30px auto">
                <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input type="text" name="campground[name]" class="form-control" value="<%= campground.name %>">
                    </div>
                    <div class="form-group">
                        <input type="number" name="campground[price]" class="form-control" value="<%= campground.price %>" min='1.00' step='1.00'>
                    </div>
                    <div class="form-group">
                        <input type="text" name="campground[image]" class="form-control" value="<%= campground.image %>">
                    </div>
                    <div class="form-group">
                        <input type="text" name="campground[description]" class="form-control" value="<%= campground.description %>">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Submit</button>
                    </div>
                </form>
                <a href="/campgrounds/<%= campground._id %>">Go Back</a>
            </div>
        </div>
    </div>

<% include ../partials/footer %>