<% include ../partials/header %>

    <div class="container">
        <div class="row">
            <h1 style="text-align: center">Edit Comment</h1>
            <div style="width: 30%; margin: 30px auto">
                <form action="/campgrounds/<%= campgroundId %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input type="text" name="comment[text]" class="form-control" value="<%= comment.text %>">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Submit</button>
                    </div>
                </form>
                <a href="/campgrounds/<%= campgroundId %>">Go Back</a>
            </div>
        </div>
    </div>

<% include ../partials/footer %>